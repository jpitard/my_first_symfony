
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src=" {{ asset("dist/img/user2-160x160.jpg") }}" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p>Alexander Pierce</p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
    <!-- search form -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                </button>
              </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
        {% for onglet_principal in json %}

          <li {% if onglet_principal.sous_onglet is defined %} class="treeview active" {% elseif app.request.get('_route') == onglet_principal.route %} class=" active" {% endif %}>
            <a href="{{ onglet_principal.lien }}">
              <i class="fa fa-{{ onglet_principal.icone }}"></i>
              <span>{{ onglet_principal.intitule_onglet }}</span> {% if onglet_principal.sous_onglet is defined %}<i class="fa fa-angle-left pull-right"></i>{% endif %}
            </a>
            {% if onglet_principal.sous_onglet is defined %}
              <ul class="treeview-menu">
                {% for sous_onglet in onglet_principal.sous_onglet %}
                  <li>
                    <a href="{{ sous_onglet.lien }}">
                      <i class="fa fa-{{ sous_onglet.icone }}"></i> {{ sous_onglet.intitule_onglet }} {% if sous_onglet.sous_onglet is defined %}<i class="fa fa-angle-left pull-right"></i>{% endif %}
                    </a>
                    {% if sous_onglet.sous_onglet is defined %}
                      <ul class="treeview-menu">
                        {% for sous_sous_onglet in sous_onglet.sous_onglet %}
                          <li><a href="{{ sous_sous_onglet.lien }}"><i class="fa fa-{{ sous_sous_onglet.icone }}"></i> {{ sous_sous_onglet.intitule_onglet }}</a></li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>

        {% endfor %}



    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
