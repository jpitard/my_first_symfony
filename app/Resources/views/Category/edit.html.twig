{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block titleContent %}Marque <small> </small>{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class=""> <a href="{{ url('brand_index') }}"> Marques </a> </li>
    <li class="active">  Modification </li>

{% endblock %}
{% block content %}


    {# form(formProduct) #}

    {# Affichage du message de success	#}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"> Modification du marque  </h3>
        </div>
        {{ form_start(formCategory, {attr: {novalidate: "novalidate", class:"form-horizontal"}}) }}
        <div class="box-body ">
            <div class="form-group">
                {{ form_errors(formCategory.title) }}
                {{ form_label(formCategory.title,"Entrez le titre de la categorie",
                {
                    label_attr:{ class:"col-sm-2 control-label" }
                })
                }}
                <div class="col-sm-10">
                    {{ form_widget(formCategory.title,
                    {
                        attr:{ class: " form-control" },
                        id: "form_title"
                    })
                    }}
                </div>
            </div>

            <div class="form-group">
                {{ form_errors(formCategory.position) }}
                {{ form_label(formCategory.position,"Entrez la position de la categorie",
                {
                    label_attr:{ class:"col-sm-2 control-label" }
                })
                }}

                <div class="col-sm-10">
                    {{ form_widget(formCategory.position,
                    {
                        attr:{ class: " form-control"},
                        id: "form_price"
                    })
                    }}
                </div>

            </div>

            <div class="form-group">
                {{ form_errors(formCategory.description) }}
                {{ form_label(formCategory.description,"Entrez la description de la categorie",
                {
                    label_attr:{ class:"col-sm-2 control-label" }
                })
                }}

                <div class="col-sm-10">
                    {{ form_widget(formCategory.description,
                    {
                        attr:{class: "form-control"},
                        id: "form_quantity"
                    })
                    }}
                </div>

            </div>



        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-info">{{ ' Enregistrer ' }}</button>
            {{ form_end(formCategory) }}


            <span style="display: inline-block">
                <a class="btn btn-default" href="{{ path('categories_list')}}"><i class="fa fa-list"></i>{{ ' Retour Ã  la liste ' }}</a>
                <a class="btn btn-danger" href="{{ path('category_remove', {id: category.id}) }}"><i class="fa fa-trash-o"></i> Supprimer </a>
             </span>

        </div>
    </div>



{% endblock %}

