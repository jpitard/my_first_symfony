{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block titleContent %}Categories <small> </small>{% endblock %}

{% block breadcrumb %}
{{ parent() }}
<li class="active"> <a href="{{ url('categories_list') }}"> Categories </a> </li>

{% endblock %}

{% block content %}

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Information sur le {{ categorie.title }}</h3>
        </div>

        <div class="box-body ">
            <dl class="dl-horizontal center ">
                <dt>ID</dt>
                <dd>{{ categorie.id }}</dd>
                <dt>Titre</dt>
                <dd>{{ categorie.title }}</dd>
                <dt>Description</dt>
                <dd>{{ categorie.description }}</dd>
                <dt>Position</dt>
                <dd>{{ categorie.position }}</dd>
            </dl>
        </div>

        <div class="box-footer">

            <a class="btn btn-default" href="{{ path('categories_list')}}"><i class="fa fa-list"></i>{{ ' Retour Ã  la liste ' }}</a>

            <span style="display: inline-block">
                 <a class="btn btn-primary" href="{{ url('category_edit', { id: categorie.id } ) }}"><i class="fa fa-trash-o"></i> Editer</a>
                 <a class="btn btn-danger" href="{{ url('category_remove', { id: categorie.id } ) }}"><i class="fa fa-trash-o"></i> Supprimer</a>
             </span>


        </div>

    </div>

{% endblock%}



{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $("#example1").DataTable();
        });
    </script>



{% endblock %}