{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block titleContent %}Marque <small> </small>{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class=""> <a href=""> User </a> </li>
    <li class="active">  Modification </li>

{% endblock %}
{% block content %}


    {# form(formProduct) #}

    {# Affichage du message de success	#}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"> Modification de votre compte   </h3>
        </div>
        {{ form_start(formUser, {attr: {novalidate: "novalidate", class:"form-horizontal"}}) }}
        <div class="box-body ">
            <div class="form-group">
                {{ form_errors(formUser.username) }}
                {{ form_label(formUser.username,"Modifier votre nom",
                {
                    label_attr:{ class:"col-sm-2 control-label" }
                })
                }}
                <div class="col-sm-10">
                    {{ form_widget(formUser.username,
                    {
                        attr:{ class: " form-control" },
                        id: "form_title"
                    })
                    }}
                </div>
            </div>

            <div class="form-group">
                {{ form_errors(formUser.email) }}
                {{ form_label(formUser.email,"Modifier votre email",
                {
                    label_attr:{ class:"col-sm-2 control-label" }
                })
                }}

                <div class="col-sm-10">
                    {{ form_widget(formUser.email,
                    {
                        attr:{class: "form-control"},
                        id: "form_quantity"
                    })
                    }}
                </div>

            </div>


        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-info">{{ ' Modifier ' }}</button>
            {{ form_end(formUser) }}

        </div>
    </div>



{% endblock %}

