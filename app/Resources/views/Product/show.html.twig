{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block titleContent %}Liste des produits <small> </small>{% endblock %}

{% block breadcrumb %}
{{ parent() }}
<li class="active"> <a href="{{ url('liste_produits') }}"> Produits </a> </li>
    <li class="active"> <a href="{{ url('liste_produits') }}"> {{ produit.title }} </a> </li>
{% endblock %}

{% block content %}

     <div class="row">
        <div class="col-xs-12">
            <h1> {{ produit.title }}</h1>
            <div class="box text-center">
                <div class=" text-center">
                    <dl class="dl-horizontal ">
                        <dt>Titre</dt>
                        <dd>{{ produit.title }}</dd>
                        <dt>Description</dt>
                        <dd>{{ produit.description }}</dd>
                        <dt>Prix</dt>
                        <dd>{{ produit.price }}</dd>
                        {# <dt>Date</dt> #}
                        {# <dd>{{ produit.date_created | date('d/m/y') }}</dd>  #}
                    </dl>
                </div>
            </div>
         </div>
     </div>

{% endblock%}



{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $("#example1").DataTable();
        });
    </script>



{% endblock %}